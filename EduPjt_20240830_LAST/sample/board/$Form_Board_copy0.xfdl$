this.Button01_00_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var row = this.Grid00.getSelectedRows()

// 	this.ds_list.addColumn("ROW_TYPE", String());
// 	this.ds_list.setColumn(row, "ROW_TYPE", "D");
